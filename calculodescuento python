    # Definici칩n de la funci칩n
def calcular_descuento(monto, descuento=0.10):
    """
    Calcula el descuento en funci칩n del monto y el porcentaje de descuento.
    
    Par치metros:
        monto (float): monto total de la compra
        descuento (float): porcentaje de descuento (por defecto 10%)
    
    Retorna:
        float: monto del descuento calculado
    """
    monto_descuento = monto * descuento
    return monto_descuento


# Programa principal
if __name__ == "__main__":
    # 1ra llamada: solo monto (usa el 10% por defecto)
    monto1 = 300
    descuento1 = calcular_descuento(monto1)
    total1 = monto1 - descuento1
    print("---- Primera Compra ----")
    print(f"Monto original: ${monto1:.2f}")
    print(f"Descuento aplicado: ${descuento1:.2f}")
    print(f"Monto final a pagar: ${total1:.2f}")

    # 2da llamada: monto + porcentaje de descuento (20%)
    monto2 = 800
    descuento2 = calcular_descuento(monto2, 0.20)
    total2 = monto2 - descuento2
    print("\n---- Segunda Compra ----")
    print(f"Monto original: ${monto2:.2f}")
    print(f"Descuento aplicado: ${descuento2:.2f}")
    print(f"Monto final a pagar: ${total2:.2f}")
